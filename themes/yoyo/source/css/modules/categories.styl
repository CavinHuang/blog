.categories
  width 80%
  margin 80px auto
  background #fff
  border 1px solid #ddd
  border-radius 5px
  padding 18px
  .categories-title
    font-family '微软雅黑'
    font-size 34px
    font-weight 600
    border-bottom 1px solid #ddd
    margin 12px
.category-list
  .category-list-item
    line-height 34px
    position relative
    padding-left 24px
    &:hover
      &::before
        box-shadow 0 0 0 3px #ff5000
    &::before
      content ''
      background-color #fff
      width 8px
      height 8px
      margin 0px 0 0 0px
      border-radius 50%
      position relative
      box-shadow 0 0 0 3px #49b1f5
      position absolute
      left 8px
      top 12px
    .category-list-count
      color #888
      margin-left 6px
      &::before,&::after
        color #888
      &::before
        content '('
      &::after
        content ')'
