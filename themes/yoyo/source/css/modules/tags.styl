.tags
  width 80%
  margin 40px auto
  background #fff
  border 1px solid #ddd
  border-radius 5px
  padding 12px
  .tags-title
    font-family '微软雅黑'
    font-size 34px
    font-weight 600
    border-bottom 1px solid #ddd
    margin 12px
  .tags-content
    a
      display inline-block
      margin 6px 14px
      transition all 0.2s ease-in-out
      &:hover
        transform scale(2)
