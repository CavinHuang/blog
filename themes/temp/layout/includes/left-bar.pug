  .left-action(style="display:none")
    // 搜索
    .search.animation-div(style="animation-name: fuxiasuo; animation-duration: 1.28571s;")
      form(action="/Home/Index/search.html", method="get")
        .search-index
          input(name="search_word", type="text", placeholder="请输入关键字", onfocus="this.placeholder=''", onblur="this.placeholder='请输入关键字'")
          |
          i.el-search
            input(value=" ", type="submit")
    // 标签
    .cloud.bg-color.animation-div(style="animation-name: fuxiasuo; animation-duration: 2s;")
      h4.index-title
        i.el-tags
        | 标签云
        small Tags Clouds
      |
      ul#3dcloud
        .tag-cloud__title= page.title
        |  -
        span.tag-cloud__amount= site.tags.length
      .tag-cloud-tags!= tagcloud({min_font: 12, max_font: 30, amount: 200, color: true, start_color: '#A4D8FA', end_color: '#0790E8'})
        li
          a.tstyle-3(href="/tag/66.html", onclick="return recordId('tid',66)", title="标签：Composer ") Composer (1)
        li
          a.tstyle-4(href="/tag/67.html", onclick="return recordId('tid',67)", title="标签：SSL ") SSL (1)
  .author-info-articles
      a(href=url_for('/')).author-info-articles__archives.article-meta
        span.pull-left= _p('主页')
      if site.posts.length
        a(href=url_for(config.archive_dir)).author-info-articles__archives.article-meta
          span.pull-left= _p('文章')
          span.pull-right= site.posts.length
      if site.tags.length
        a(href=url_for(config.tag_dir)).author-info-articles__tags.article-meta
          span.pull-left= _p('标签')
          span.pull-right= site.tags.length
      if site.categories.length
        a(href=url_for(config.category_dir)).author-info-articles__categories.article-meta
          span.pull-left= _p('分类')
          span.pull-right= site.categories.length

  // 关注我
